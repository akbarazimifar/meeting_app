<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">

    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>

    <script src="https://unpkg.com/vuex@2.0.0"></script>

    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script>

        const DEBUG_ON = `<%= debugOn  %>`;
        const ROOM_ID = `<%= roomId  %>`;
        const PEERJS_HOST = `<%= peerjsHost  %>`;
        const PEERJS_PORT = `<%= peerjsPort  %>`;
        const USER_NAME = `<%= userName  %>`;
        const useHTTPs = `<%= useHttps  %>`;

        // will be blank useHttps is false
        const PEERJS_SSL_KEY = `<%= sslKey  %>`;
        const PEERJS_SSL_CERT = `<%= sslCert  %>`;

        //
        // set up the config for peerjs connection
        // used in App.js
        //
        const peerConfig = {
            host: PEERJS_HOST
        };

        // ngrok config won't work if port is specified for some reason
        if (PEERJS_PORT.trim() !== '') {
            peerConfig.port = PEERJS_PORT;
        }

        // figure out if we need to use
        // certificates for peerjs
        if (useHTTPs === 'true') {
            peerConfig.ssl = {
                key: PEERJS_SSL_KEY,
                cert: PEERJS_SSL_CERT
            };
        }

    </script>

    <script src="setup.js" defer></script>
    <script src="main_vue.js" type="module" defer></script>
    <title>Meet-Free</title>
    <style>
        video[incarouselmode="no"] {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
        }

        video[incarouselmode="yes"] {
            height: 50%;
            width: 50%;
            margin: 0;
            padding: 0;
        }

        img {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
        }

        img[incarouselmode="yes"] {
            height: 50%;
            width: 50%;
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body class="w3-light-blue">
    <div id="app">
    </div>

</body>

</html>